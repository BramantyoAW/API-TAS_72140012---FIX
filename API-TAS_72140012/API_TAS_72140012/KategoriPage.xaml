<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="API_TAS_72140012.KategoriPage" Title="Kategori">
 <StackLayout>
    <ListView x:Name="listKategori" ItemsSource="{Binding ListKategori}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding KategoriId}" 
                    Detail="{Binding NamaKategori}" DetailColor="Red" />
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    <Button Text="Tambah Kategori" x:Name="btnTambah" />
  </StackLayout>
</ContentPage>